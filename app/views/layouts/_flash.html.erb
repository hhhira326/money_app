<% flash.each do |key, value| %>
    <p class="alert alert-<%= key %>">
      <%= value %>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </p>
<% end %>

<script>
  $(function() {
    if ($('.alert').hasClass('alert-success')) {
      $('.alert').delay(3000).queue(function(){
        $('.alert').hide();
      });
    }
  });
</script>