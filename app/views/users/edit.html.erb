<%= form_for(@user) do |f| %>
  <div class="container d-flex">
    <div class="col-md-7">
      <div class="mt-5 d-flex">
        <div class="col-md-6 pr-0">
          <div class="d-flex justify-content-center">
            <%= image_tag @user.avatar.url, size: '250x250', class: 'user-icon' %>
          </div>
          <div class="d-flex justify-content-end">
              <%= f.file_field :avatar, class:'small w-100'%>
          </div>
        </div>
        <div class="align-self-center col-md-6 pl-0">
          <h1><%= f.text_field :name , class:'w-100'%></h1>
          <%= f.email_field :email %>
          <%= f.label :'パスワード', class: 'small mb-0' %>
          <%= f.password_field :password, class: 'h6 mb-0' %>
          <%= f.label :'パスワード確認', class: 'small mb-0' %>
          <%= f.password_field :password_confirmation, class: 'h6 mb-0' %>
        </div>
      </div>
      <div class="card mt-3">
        <div class="card-header font-weight-bold text-center p-1">カテゴリ</div>
        <div class="card-body ">
        </div>
      </div>
      <div class="card mt-1">
        <div class="card-header font-weight-bold text-center p-1">固定費</div>
        <div class="card-body ">
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card mt-5">
        <div class="card-header font-weight-bold text-center">基本情報</div>
        <div class="card-body d-flex justify-content-center">
          <ul class="mb-0 p-0 ">
              <li><%= f.label :'年齢：'%>
              <%= f.text_field :age, size: "5", class: 'h6'%> 歳</li>
              <li><%= f.label :'性別：' %>
              <%= f.radio_button :sex, "男", class: 'mr-2' %>男 <%= f.radio_button :sex, "女", class: 'mr-2' %>女</li>
              <li><%= f.label :'地域：' %>
              <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {include_blank: "---"} ) %></li>
              <li><%= f.label :'仕事：' %>
              <%= f.collection_select(:job_id, Job.all, :id, :name, {include_blank: "---"} ) %></li>

              <li><%= f.label :'世帯人数：' %>
              <%= f.select :family, [ ["1人"], ["2人"], ["3人"] ,["4人"], ["5人"], ["6人"], ["7人以上"]], prompt: "---", class: 'form-control' %></li>
              <li><%= f.label :'年収：' %>
              <%= f.text_field :income, size: "5", class: 'h6' %> 万</li>
              <li class="mb-0"><%= f.label :'家賃：' %>
              <%= f.text_field :rent, size: "5", class: 'h6'%> 万
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="btn d-flex justify-content-center mt-3">
    <button type="button" class="btn btn-light px-4 py-2 mr-3"><%= link_to '戻る', user_path, class: 'text-decoration-none text-dark' %></button>
    <%= f.submit '更新', class: 'btn btn-warning px-4 py-2 ml-3' %>
  </div>
<% end %>

