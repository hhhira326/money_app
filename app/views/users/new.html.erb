<div class="row justify-content-center">
  <div class="card col-md-7 p-0 mt-5">
    <div class="card-header font-weight-bold">新規会員登録</div>
    <div class="card-body d-flex justify-content-center">
      <div class="col-md-7  p-0">
        <%= form_for(@user) do |f| %>

          <%= f.label :'メールアドレス', class: 'mt-5 small' %>
          <%= f.email_field :email, class: 'form-control form-control-sm' %>

          <%= f.label :'パスワード', class: 'mt-4 small' %>
          <%= f.password_field :password, class: 'form-control form-control-sm' %>

          <%= f.label :'パスワード確認', class: 'mt-4 small' %>
          <%= f.password_field :password, class: 'form-control form-control-sm' %>

          <p class="d-flex flex-column align-items-center ">
            <%= f.submit "新規会員登録", class: 'btn btn-warning mt-5 btn-lg w-50 ' %>
          </p>
        <% end %>
        <p class="small mt-2 mb-0 text-center"><%= link_to 'ログインはこちら', login_path, class: 'text-secondary' %></p>
      </div>
    </div>
  </div>
</div>

